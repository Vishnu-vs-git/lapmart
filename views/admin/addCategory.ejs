<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LapMart - Category Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>
<body class="bg-gray-900 text-white">
    <div class="flex h-screen">
        <%- include('../partials/adminSidebar') %>
        <!-- Main Content -->
        <div class="flex-1 p-8">
            <%- include('../partials/adminLoginIcon') %>
            <h1 class="text-4xl font-bold text-orange-400 mb-4">Add Category</h1>
    
            <!-- Category Form -->
            <form action="/admin/addCategory" method="POST" class="bg-gray-800 p-6 rounded-lg">
                
                <!-- Category Name -->
                <div class="mb-4">
                    <label for="name" class="block text-lg mb-2">Category Name</label>
                    <input type="text" id="name" name="name" required placeholder="Enter category name"
                        class="w-full px-4 py-2 bg-gray-700 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-orange-400" aria-label="Category Name">
                </div>

                <!-- Submit Button -->
                <div class="mt-6">
                    <button type="submit" class="w-full bg-green-500 text-black px-4 py-2 rounded-lg hover:bg-green-600 transition duration-300">Add Category</button>
                </div>
                
                <!-- Error/Success Message -->
                <% if (message) { %>
                    <div id="message"  class="mt-4 text-center <%= message.type === 'error' ? 'text-red-500' : 'text-green-500' %> bg-gray-700 p-2 rounded">
                        <%= message.text %>
                    </div>
                <% } %>
            </form>
        </div>
    </div>
    <script>
  function hideMessage() {
        const messageElement = document.getElementById('message');
        if (messageElement) {
            setTimeout(() => {
                messageElement.style.display = 'none';
            }, 3000); // 5000 milliseconds = 5 seconds
        }
    }

    // Call the function when the page loads
    window.onload = function() {
        hideMessage();
    };

    </script>

  
    
</body>
</html>
