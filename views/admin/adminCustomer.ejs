<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <main class="p-6">
    <h1 class="text-2xl font-bold mb-4">Customers</h1>
    
    <!-- Search and Add buttons -->
    <div class="flex justify-between items-center mb-4">
      <div class="relative">
        <input type="text" placeholder="Search" class="rounded-md bg-gray-700 p-2 text-white" />
      </div>
      <button class="bg-blue-600 px-4 py-2 rounded-md hover:bg-blue-700">
        Add Customer
      </button>
    </div>
  
    <!-- Customers Table -->
    <table class="w-full table-auto bg-gray-800 text-left rounded-lg">
      <thead>
        <tr class="bg-orange-600 text-white">
          <th class="py-2 px-4">Id</th>
          <th class="py-2 px-4">First Name</th>
          <th class="py-2 px-4">Last Name</th>
          <th class="py-2 px-4">Email</th>
          <th class="py-2 px-4">Phone</th>
          <th class="py-2 px-4">Address</th>
          <th class="py-2 px-4">Action</th>
        </tr>
      </thead>
      <tbody>
        <% customers.forEach((customer, index) => { %>
          <tr class="bg-gray-700">
            <td class="py-2 px-4"><%= index + 1 %></td>
            <td class="py-2 px-4"><%= customer.firstName %></td>
            <td class="py-2 px-4"><%= customer.lastName %></td>
            <td class="py-2 px-4"><%= customer.email %></td>
            <td class="py-2 px-4"><%= customer.phone %></td>
            <td class="py-2 px-4"><%= customer.address %></td>
            <td class="py-2 px-4">
              <% if (customer.isBlocked) { %>
                <button class="bg-red-600 px-4 py-1 rounded-md">Unblock</button>
              <% } else { %>
                <button class="bg-green-600 px-4 py-1 rounded-md">Block</button>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  
    <!-- Pagination -->
    <div class="flex justify-center mt-6">
      <button class="px-4 py-2 mx-1 bg-gray-600 rounded-md">Prev</button>
      <button class="px-4 py-2 mx-1 bg-gray-600 rounded-md">1</button>
      <button class="px-4 py-2 mx-1 bg-gray-600 rounded-md">2</button>
      <button class="px-4 py-2 mx-1 bg-gray-600 rounded-md">3</button>
      <button class="px-4 py-2 mx-1 bg-gray-600 rounded-md">Next</button>
    </div>
  </main>
  
</body>
</html>
