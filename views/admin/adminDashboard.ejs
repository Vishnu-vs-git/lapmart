<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Customers</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white font-sans">

    <!-- Sidebar -->
    <div class="flex">
        <aside class="w-64 bg-gray-800 h-screen flex flex-col">
            <div class="text-center py-6">
                <h1 class="text-3xl font-bold text-white">LapMart</h1>
            </div>
            <nav class="mt-10 flex-1 px-4">
                <ul>
                    <li class="mb-4">
                        <a href="#" class="flex items-center px-4 py-2 text-gray-200 hover:bg-gray-700">
                            <span class="mr-2"><i class="fas fa-tachometer-alt"></i></span> Dashboard
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#" class="flex items-center px-4 py-2 text-gray-200 hover:bg-gray-700">
                            <span class="mr-2"><i class="fas fa-box"></i></span> Products
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#" class="flex items-center px-4 py-2 text-gray-200 hover:bg-gray-700">
                            <span class="mr-2"><i class="fas fa-users"></i></span> Customers
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#" class="flex items-center px-4 py-2 text-gray-200 hover:bg-gray-700">
                            <span class="mr-2"><i class="fas fa-shopping-cart"></i></span> Orders
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#" class="flex items-center px-4 py-2 text-gray-200 hover:bg-gray-700">
                            <span class="mr-2"><i class="fas fa-tag"></i></span> Coupons
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#" class="flex items-center px-4 py-2 text-gray-200 hover:bg-gray-700">
                            <span class="mr-2"><i class="fas fa-list-alt"></i></span> Category
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#" class="flex items-center px-4 py-2 text-gray-200 hover:bg-gray-700">
                            <span class="mr-2"><i class="fas fa-percent"></i></span> Discounts
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#" class="flex items-center px-4 py-2 text-gray-200 hover:bg-gray-700">
                            <span class="mr-2"><i class="fas fa-image"></i></span> Banner
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#" class="flex items-center px-4 py-2 text-gray-200 hover:bg-gray-700">
                            <span class="mr-2"><i class="fas fa-chart-bar"></i></span> Sales Report
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#" class="flex items-center px-4 py-2 text-gray-200 hover:bg-gray-700">
                            <span class="mr-2"><i class="fas fa-sign-out-alt"></i></span> Logout
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-10">
            <!-- Customer Management Section -->
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold">Customers</h2>
                <div class="relative">
                    <input type="text" placeholder="Search" class="bg-gray-700 text-white px-4 py-2 rounded-md">
                </div>
            </div>

            <div class="overflow-x-auto">
              <table class="min-w-full bg-gray-800 rounded-lg">
                  <thead class="bg-orange-600">
                      <tr>
                          <th class="py-3 px-6 text-left">Id</th>
                          <th class="py-3 px-6 text-left">First Name</th>
                          <th class="py-3 px-6 text-left">Last Name</th>
                          <th class="py-3 px-6 text-left">Email</th>
                          <th class="py-3 px-6 text-left">Phone</th>
                          <th class="py-3 px-6 text-left">Address</th>
                          <th class="py-3 px-6 text-center">Action</th>
                      </tr>
                  </thead>
                  <tbody class="bg-gray-700 text-gray-100">
                      <% customers.forEach(customer => { %>
                          <tr class="border-b border-gray-600">
                              <td class="py-4 px-6"><%= customer.id %></td>
                              <td class="py-4 px-6"><%= customer.firstName %></td>
                              <td class="py-4 px-6"><%= customer.lastName %></td>
                              <td class="py-4 px-6"><%= customer.email %></td>
                              <td class="py-4 px-6"><%= customer.phone %></td>
                              <td class="py-4 px-6"><%= customer.address %></td>
                              <td class="py-4 px-6 text-center">
                                  <button class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600">Block</button>
                                  <button class="bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600">Unblock</button>
                              </td>
                          </tr>
                      <% }) %>
                  </tbody>
              </table>
          </div>
          
            <!-- Pagination -->
            <div class="flex justify-center mt-6">
                <nav>
                    <ul class="flex space-x-2">
                        <li><button class="bg-gray-700 text-white px-3 py-1 rounded-md">Prev</button></li>
                        <li><button class="bg-gray-600 text-white px-3 py-1 rounded-md">1</button></li>
                        <li><button class="bg-gray-700 text-white px-3 py-1 rounded-md">2</button></li>
                        <li><button class="bg-gray-700 text-white px-3 py-1 rounded-md">3</button></li>
                        <li><button class="bg-gray-700 text-white px-3 py-1 rounded-md">Next</button></li>
                    </ul>
                </nav>
            </div>
        </main>
    </div>

</body>
</html>
