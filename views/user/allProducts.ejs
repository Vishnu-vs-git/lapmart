<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
 function addToWishlist(productId) {
    axios.post('/user/addWishlist', { productId: productId })
        .then(response => {
            // Check for success or already added condition
            console.log("Response data:", response.data);
            if (response.data.success) {
                Swal.fire({
                    title: 'Success!',
                    text: response.data.message || 'Product has been added to wishlist successfully.',
                    icon: 'success',
                    iconColor: '#4CAF50',
                    timer: 3000,
                    showConfirmButton: false,
                    customClass: {
                        popup: 'rounded-alert',
                        icon: 'custom-icon',
                        title: 'custom-title',
                        confirmButton: 'custom-button'
                    }
                });
            } else {
                Swal.fire({
                    title: 'Warning!',
                    text: response.data.message || 'Product is already in wishlist!',
                    icon: 'warning',
                    iconColor: '#FF9800',
                    timer: 3000,
                    showConfirmButton: false,
                    customClass: {
                        popup: 'rounded-alert',
                        icon: 'custom-icon',
                        title: 'custom-title',
                        confirmButton: 'custom-button'
                    }
                });
            }
        })
        .catch(error => {
            console.error('Error adding to wishlist:', error);
            Swal.fire({
                title: 'Error!',
                text: 'An error occurred. Please try again.',
                icon: 'error',
                iconColor: '#F44336',
                timer: 3000,
                showConfirmButton: false
            });
        });
}

</script>


  
