<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">

    <!-- Include Header Partial -->
    <%-include('../partials/header') %>

    <!-- Include Navbar Partial -->
    <%-include('../partials/navbar') %>

    <!-- Main Container for the Forgot Password Form -->
    <div class="flex-grow flex items-center justify-center p-4">
        <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-sm border-4 border-black">
            <h2 class="text-2xl font-bold mb-6 text-center text-gray-900">Forgot Password</h2>

            <!-- Display error or success message if exists -->
            <% if (message) { %>
                <div class="mb-4 text-red-500 text-sm text-center">
                    <%= message %>
                </div>
            <% } %>

            <!-- Forgot Password Form -->
            <form action="/user/forgot-password" method="POST">
                <!-- Email Field -->
                <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-600">Enter Email</label>
                    <input type="email" id="email" name="email" required class="mt-1 block w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-purple-500">
                </div>

                <!-- Send Request Button -->
                <div class="bg-black p-2 rounded-lg">
                    <button type="submit" class="w-full text-white font-bold p-2 rounded-md">Send Request</button>
                </div>
            </form>

            <!-- Link to Login -->
            <div class="mt-4 text-center">
                <a href="/user/login" class="text-sm text-purple-600 hover:underline">Back to Login</a>
            </div>
        </div>
    </div>

    <!-- Include Footer Partial -->
    <%-include('../partials/footer') %>

</body>
</html>
