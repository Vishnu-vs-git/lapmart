    <div class="flex justify-center space-x-6">
      <a href="/userOrders" class="px-6 py-2 rounded-full bg-blue-500 text-white font-semibold shadow-md hover:bg-blue-600 transition">My Orders</a>
      <a href="/home" class="px-6 py-2 rounded-full bg-teal-400 text-black font-semibold shadow-md hover:bg-teal-500 transition">Continue Shopping</a>
    </div>
  </div>
</div>
  <%- include('../partials/footer') %>

</body>
</html>
