<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            background: linear-gradient(135deg, #ececf316, #5b6460);
        }
        .form-input {
            border: 2px solid #D1D5DB; /* Tailwind's gray-300 */
            transition: border-color 0.3s ease;
        }
        .form-input:focus {
            border-color: #4F46E5; /* Tailwind's purple-600 */
            box-shadow: 0 0 0 2px rgba(160, 159, 186, 0.5); /* Purple shadow */
        }
        .btn {
            transition: background-color 0.3s ease, transform 0.2s ease;
        }
        .btn:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body class="flex flex-col min-h-screen">

    <!-- Include Header Partial -->
    <%- include('../partials/loggedheader') %>

    <!-- Include Navbar Partial -->
    <%- include('../partials/navbar') %>

    <!-- Main Container for the Login Form -->
    <div class="flex-grow flex items-center justify-center mt-10 mb-10">
        <div class="bg-white shadow-lg rounded-3xl p-10 w-full max-w-md">
            <h2 class="text-3xl font-bold mb-8 text-center text-gray-800">Welcome Back!</h2>

            <!-- Display error message if exists -->
            <% if (message) { %>
                <div class="mb-4 text-red-500 text-sm text-center">
                    <%= message %>
                </div>
            <% } %>

            <!-- Login Form -->
            <form action="/user/login" method="POST" class="space-y-6">
                <!-- Email -->
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-600">Email</label>
                    <input type="email" id="email" name="email" autocomplete="off" required 
                           class="form-input mt-1 block w-full px-4 py-3 rounded-lg focus:outline-none">
                </div>

                <!-- Password -->
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-600">Password</label>
                    <input type="password" id="password" name="password" autocomplete="off"  required 
                           class="form-input mt-1 block w-full px-4 py-3 rounded-lg focus:outline-none">
                </div>

                <!-- Forgot Password Link -->
                <div class="text-right">
                    <a href="/user/forgot-password" class="text-sm text-purple-600 hover:text-purple-800 transition duration-200">Forgot Password?</a>
                </div>

                <!-- Sign in Button -->
                <button type="submit" class="btn w-full bg-purple-600 text-white font-semibold py-3 rounded-lg shadow-md hover:bg-purple-700">
                    Login
                </button>
            </form>

            <!-- Google Sign-in Button -->
            <div class="mt-6 text-center">
                <p class="text-sm text-gray-600">Or sign in with</p>
                <a href="/auth/google" class="flex items-center justify-center mt-4 bg-red-500 text-white py-3 rounded-lg shadow-md hover:bg-red-600 transition duration-300">
                    <img src="/pngwing.com.png" alt="Google Icon" class="w-5 h-5 mr-2">
                    Sign in with Google
                </a>
            </div>

            <!-- Sign up Prompt -->
            <p class="mt-4 text-center text-sm text-gray-600">
                Don't have an account? <a href="/user/signup" class="text-purple-600 hover:underline">Sign up</a>
            </p>
        </div>
    </div>

    <!-- Include Footer Partial -->
    <%- include('../partials/footer') %>

</body>
</html>
